# Database Configuration Docker
DB_USER=your_db_user
DB_PASSWORD=your_strong_password
DB_NAME=grammy-telegram
# For Prisma DATABASE_URL format (local development)
DATABASE_URL='postgresql://your_db_user:your_strong_password@localhost:5432/grammy-telegram?schema=public'

# Telegram Bot Configuration
TELEGRAM_TOKEN=your_telegram_bot_token
ADMIN_CHAT_ID=your_admin_chat_id
CHANNEL_CHAT_ID=your_channel_chat_id

# Localization
TIMEZONE=Europe/Berlin
DATE_FORMAT="dd.MM.yyyy HH:mm"
DATE_ONLY_FORMAT="dd.MM.yyyy"
LOCALE=de

# Event Configuration
MAX_EVENT_EDITS=2
EVENTS_REQUIRE_APPROVAL=false
MAX_CATEGORIES=3

# Telegram Flood Control
MAX_RETRY_ATTEMPTS=3
MAX_DELAY_SECONDS=60

# User Rate Limiting
RATE_LIMIT_TIME_FRAME=5000
RATE_LIMIT_REQUESTS=5

# Archive Cron - every day at midnight
ARCHIVE_CRON="0 0 * * *"

# Support Contact Information (optional)
SUPPORT_EMAIL=
SUPPORT_TELEGRAM_USER=
