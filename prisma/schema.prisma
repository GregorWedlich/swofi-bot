// prisma/schema.prisma

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id              String       @id @default(uuid())
  title           String
  description     String       @db.Text
  entryDate       DateTime
  date            DateTime
  endDate         DateTime
  category        String[]
  links           String[]
  groupLink       String? 
  imageBase64     String?
  submittedById   BigInt
  submittedBy     String
  location        String
  status          EventStatus  @default(PENDING)
  rejectionReason String?
  messageId       BigInt?
  updatedCount    Int          @default(0)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
       // Neues optionales Feld f√ºr den Gruppenlink

  @@index([date])
  @@index([title])
  @@index([category])
}

model EventArchive {
  id              String       @id
  title           String
  description     String       @db.Text
  entryDate       DateTime
  date            DateTime
  endDate         DateTime
  category        String[]
  links           String[]
  groupLink       String? 
  imageBase64     String?
  submittedById   BigInt
  submittedBy     String
  location        String
  status          EventStatus  @default(PENDING)
  rejectionReason String?
  messageId       BigInt?
  updatedCount    Int          @default(0)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime

  @@index([date])
  @@index([title])
  @@index([category])
}

enum EventStatus {
  PENDING
  APPROVED
  EDITED_PENDING
  EDITED_APPROVED
  REJECTED
}